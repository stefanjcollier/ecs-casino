<div class="d-flex justify-content-end mb-3">
  <%= link_to '🤑 CASH OUT 🤑', new_cash_out_path, class: "btn btn-success mx-2" %>
  <% if params[:admin] %>
  <%= link_to '🏆 Find Winner 🏆', winners_path, class: "btn btn-warning" %>
  <% end %>
</div>
<div class="table-responsive">
    <table id="dataTable" class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Cash</th>
                <th>Tickets</th>
                <% if params[:admin] %>
                <th>Actions</th>
                <% end %>
            </tr>
        </thead>
        <tbody>
        <% @cash_outs.each do |cash_out| %>
          <tr>
              <td> <%= cash_out.name %></td>
              <td>$<%= cash_out.cash %></td>
              <td> <%= cash_out.tickets %></td>
              <% if params[:admin] %>
              <td>
                <%= link_to 'Edit', cash_out, class: "btn btn-primary" %>
                <%= link_to 'Delete', cash_out, data: {
                                    turbo_method: :delete,
                                    turbo_confirm: "Are you sure?"
                                  }, class: "btn btn-danger" %>
              </td>
              <% end %>
          </tr>
        <% end %>
        </tbody>
    </table>
</div>
